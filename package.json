{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "vite --open",
    "test:js": "eslint .",
    "test:css": "stylelint src/**/*.pcss",
    "test:build": "pnpm build && size-limit",
    "test": "pnpm run /^test:/",
    "clean": "rm -Rf dist/",
    "build:home": "NODE_ENV=production ./scripts/build-home.js",
    "build:api": "NODE_ENV=production ./scripts/build-api.js",
    "build:docs": "NODE_ENV=production ./scripts/build-docs.js",
    "build": "pnpm build:home && pnpm build:api && pnpm build:docs",
    "start:build": "serve dist"
  },
  "dependencies": {
    "@types/node": "^20.2.5",
    "autoprefixer": "^10.4.14",
    "globby": "^13.1.4",
    "jstransformer-lowlight": "^0.1.0",
    "postcss": "^8.4.24",
    "postcss-hexrgba": "^2.1.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^6.0.1",
    "rehype-highlight": "^6.0.0",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-highlight.js": "^7.0.1",
    "remark-html": "^15.0.2",
    "remark-parse": "^10.0.2",
    "remark-rehype": "^10.1.0",
    "typedoc": "^0.24.7",
    "typescript": "~5.0.4",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "vite": "^4.3.9",
    "vite-plugin-pug-transformer": "^1.0.3"
