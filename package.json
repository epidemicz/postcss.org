{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "vite --open",
    "lint": "eslint . && stylelint src/**/*.pcss",
    "test": "pnpm lint && pnpm build && size-limit",
    "clean": "rm -Rf dist/",
    "build:home": "NODE_ENV=production ./scripts/build-home.js",
    "build:api": "NODE_ENV=production ./scripts/build-api.js",
    "build": "pnpm build:home && pnpm build:api",
    "start:build": "serve dist"
  },
  "dependencies": {
    "@types/node": "^18.6.2",
    "autoprefixer": "^10.4.8",
    "globby": "^13.1.2",
    "jstransformer-lowlight": "^0.1.0",
    "postcss": "^8.4.14",
    "postcss-hexrgba": "^2.1.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^5.0.6",
    "rehype-highlight": "^5.0.2",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-highlight.js": "^7.0.1",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "typedoc": "^0.21.10",
    "typescript": "~4.4.4",
    "unified": "^10.1.2",
    "vite": "^3.0.4",
    "vite-plugin-pug-transformer": "^1.0.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^47.2.0",
    "@logux/stylelint-config": "^0.10.1",
    "@size-limit/file": "^7.0.8",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "highlight.js": "^11.6.0",
    "nano-staged": "^0.8.0",
    "serve": "^14.0.1",
    "simple-git-hooks": "^2.8.0",
    "size-limit": "^7.0.8",
    "stylelint": "^14.9.1",
    "svgo": "^2.8.0"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "browserslist": [
    "defaults",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "design/",
    "dist/"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config",
    "rules": {
      "color-no-hex": null
    }
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Home",
      "path": [
        "dist/index.html",
        "dist/assets/*",
        "!dist/assets/*.ico"
      ],
      "limit": "320 KB"
    },
    {
      "name": "API",
      "path": [
        "dist/api/index.html",
        "dist/api/assets/*",
        "!dist/api/assets/*.ico"
      ],
      "limit": "310 KB"
    }
  ]
}
